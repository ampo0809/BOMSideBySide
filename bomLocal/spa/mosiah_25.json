/p>","referenceUris":[{"type":"scripture-ref","href":"/study/scriptures/gs/covenant?lang=spa","text":"GEE Convenio"}]}}},"pids":[["124260864",{"key":"124260864"}],["124261025",{"key":"124261025"}],["124261027",{"key":"124261027"}],["124261030",{"key":"124261030"}],["124261034",{"key":"124261034"}],["124261038",{"key":"124261038"}],["124261042",{"key":"124261042"}],["124261047",{"key":"124261047"}],["124261050",{"key":"124261050"}],["124261052",{"key":"124261052"}],["124261054",{"key":"124261054"}],["124261056",{"key":"124261056"}],["124261058",{"key":"124261058"}],["124261060",{"key":"124261060"}],["124261062",{"key":"124261062"}],["124261063",{"key":"124261063"}],["124261064",{"key":"124261064"}],["124261065",{"key":"124261065"}],["124261066",{"key":"124261066"}],["124261067",{"key":"124261067"}],["124261068",{"key":"124261068"}],["124261069",{"key":"124261069"}],["124261070",{"key":"124261070"}],["124261071",{"key":"124261071"}],["124261072",{"key":"124261072"}],["124261073",{"key":"124261073"}],["124261074",{"key":"124261074"}],["124261075",{"key":"124261075"}],["124261076",{"key":"124261076"}],["124261077",{"key":"124261077"}],["124261078",{"key":"124261078"}],["124261079",{"key":"124261079"}],["124261080",{"key":"124261080"}],["124261081",{"key":"124261081"}],["124261082",{"key":"124261082"}],["124261083",{"key":"124261083"}],["124261084",{"key":"124261084"}],["124261085",{"key":"124261085"}],["124261086",{"key":"124261086"}]],"tableOfContentsUri":"/scriptures/bofm","uri":"/scriptures/bofm/mosiah/25"}